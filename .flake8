[flake8]
max-line-length = 88
select = E,W,F
# Black handles E203, E501; allow W503 and E402
ignore = E203,E501,W503,E402
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    tests/*:E501,F401,F811
    config/*:E501
    __init__.py:F401
